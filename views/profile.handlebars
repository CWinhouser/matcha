<form action="/imageUpload" method="POST" enctype="multipart/form-data">
    <ul class="list-unstyled">
        <li class="media">
            <img src="/static/userImage/{{image}}" class="mr-3" alt="..." width="200" id="image" name="image">
            <div class="media-body">
                <h5 class="mt-0 mb-1"></h5>
            </div>
        </li>
            <input type="file" id="avatar" name="avatar" accept="image/png, image/jpeg">
            <button type="submit" class="btn btn-primary">upload</button>
</form>
<form action="/updateProfile" method="POST">
    </ul>
    <div>
    </div>
    <div>
        <a>Popularity:</a>
    </div>
    <div class="form-group">
        <label for="exampleFormControlInput1">Fullname</label>
        <input type="text" class="form-control" name="fullname" id="fullname" value="{{fullname}}">
    </div>
    <div class="form-group">
        <label for="exampleFormControlInput1">Age</label>
        <input type="text" class="form-control" name="age" id="age" value="{{age}}">
    </div>
    <div class="form-group">
        <label for="exampleFormControlTextarea1">Bio</label>
        <textarea type="text" class="form-control" name="bio" id="bio" rows="3">{{bio}}</textarea>
    </div>
    <div>
        <a>Interests</a>
    </div>
    <div class="form-check form-check-inline">
        {{#ifeq gaming 1}}
            <input class="form-check-input" type="checkbox" name="gaming" id="gaming" value="gaming" checked="true">
        {{else}}
            <input class="form-check-input" type="checkbox" name="gaming" id="gaming" value="gaming">
        {{/ifeq}}
        <label class="form-check-label" for="inlineCheckbox1">Gaming</label>
    </div>
    <div class="form-check form-check-inline">
        {{#ifeq music 1}}
            <input class="form-check-input" type="checkbox" name="music" id="music" value="music" checked="true">
        {{else}}
            <input class="form-check-input" type="checkbox" name="music" id="music" value="music">
        {{/ifeq}}
        <label class="form-check-label" for="inlineCheckbox2">Music</label>
    </div>
    <div class="form-check form-check-inline">
        {{#ifeq netflix 1}}
            <input class="form-check-input" type="checkbox" name="netflix" id="netflix" value="netflix" checked="true">
        {{else}}
            <input class="form-check-input" type="checkbox" name="netflix" id="netflix" value="netflix">
        {{/ifeq}}
        <label class="form-check-label" for="inlineCheckbox3">Netflix</label>
    </div>
    <div>
        <a>Gender</a>
    </div>
    <div class="form-check form-check-inline">
        {{#ifeq male 1}}
        <input class="form-check-input" type="radio" name="gender" id="male" value="male" checked="true">
        {{else}}
        <input class="form-check-input" type="radio" name="gender" id="male" value="male">
        {{/ifeq}}
        <label class="form-check-label" for="male">Male</label>
    </div>
    <div class="form-check form-check-inline">
        {{#ifeq female 1}}
        <input class="form-check-input" type="radio" name="gender" id="female" value="female" checked="true">
        {{else}}
        <input class="form-check-input" type="radio" name="gender" id="female" value="female">
        {{/ifeq}}
        <label class="form-check-label" for="female">Female</label>
    </div>
    <div>
        <a>Interested in</a>
    </div>
    <div class="form-check form-check-inline">
        {{#if maleSelected}}
        <input class="form-check-input" type="radio" name="interested" id="intMale" value="intMale" checked="true">
        {{else}}
        <input class="form-check-input" type="radio" name="interested" id="intMale" value="intMale">
        {{/if}}
        <label class="form-check-label" for="inlineCheckbox1">Male</label>
    </div>
    <div class="form-check form-check-inline">
        {{#if femaleSelected}}
        <input class="form-check-input" type="radio" name="interested" id="intFemale" value="intFemale" checked="true">
        {{else}}
        <input class="form-check-input" type="radio" name="interested" id="intFemale" value="intFemale">
        {{/if}}
        <label class="form-check-label" for="inlineCheckbox1">Female</label>
    </div>
    <div class="form-check form-check-inline">
        {{#if bothSelected}}
        <input class="form-check-input" type="radio" name="interested" id="intBoth" value="intBoth" checked="true">
        {{else}}
        <input class="form-check-input" type="radio" name="interested" id="intBoth" value="intBoth">
        {{/if}}
        <label class="form-check-label" for="inlineCheckbox1">Both</label>
    </div>
    <div>

    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>