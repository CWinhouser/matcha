<form action="/showAdvanced" method="POST">
  <div class="form-group">
    <label for="minAge">minAge</label>
    <input class="form-control" id="minAge" name="minAge">
  </div>
  <div class="form-group">
    <label for="maxAge">maxAge</label>
    <input class="form-control" id="maxAge" name="maxAge">
  </div>
  <div class="form-group form-check">
    <input type="checkbox" class="form-check-input" id="comInterests", name="comInterests">
    <label class="form-check-label" for="comInterests">Common interests?</label>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>